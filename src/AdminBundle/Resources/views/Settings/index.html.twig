{% extends "@Admin/base_home.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">System settings</h3>
                </div>
                <div class="box-body">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr><th>Key</th><th>Value</th><th>Type</th><th>Updated At</th></tr>
                        </thead>
                        <tbody>
                        {% for setting in settings %}
                            <tr>
                                {% if setting.type == 'DATETIME' %}
                                    {% set value = setting.realValue|date('d/m/Y H:i:s') %}
                                {% elseif setting.type == 'JSON' %}
                                    {% set value = setting.realValue|json_encode %}
                                {% else %}
                                    {% set value = setting.realValue %}
                                {% endif %}
                                <td>{{ setting.key }}</td><td class="text-blue">{{ value }}</td><td class="text-green">{{ setting.type }}</td><td class="text-green">{{ setting.updatedAt|date('Y/m/d H:i:s') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
